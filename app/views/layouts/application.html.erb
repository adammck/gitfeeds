    <title><%= t :site_title %></title>
    <%= csrf_meta_tag %>

    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :all %>
  </head>
  <body>

    <header>
      <h1><%= link_to t(:site_title), new_repo_path %></h1>
