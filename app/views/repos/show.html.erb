<% content_for :sub_header do %>
  <h2><%= @repo.url %></h2>
<% end %>

<% content_for :feeds do %>
  <%= auto_discovery_link_tag(:rss, {:action=>:commits}, :title=>t(".commits")) %>
  <%= auto_discovery_link_tag(:rss, {:action=>:tags}, :title=>t(".tags")) %>
<% end %>

<% if (commits = @repo.commits).any? %>
  <section class="commits">
    <h3><%= t(".commits") %></h3>
    <ul>
      <% commits.each do |commit| %>
        <li><%= commit.short_message %></li>
      <% end %>
    </ul>
  </section>
<% end %>

<% if (tags = @repo.tags).any? %>
  <section class="tags">
    <h3><%= t(".tags") %></h3>
    <ul>
      <% tags.each do |tag| %>
        <li><%= tag.name %></li>
      <% end %>
    </ul>
  </section>
<% end %>